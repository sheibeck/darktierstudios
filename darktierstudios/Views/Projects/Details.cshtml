@model darktierstudios.Models.Project

@{
    ViewBag.Title = Model.Name;
}

<div class="full_div">
    <div class="wrapper">

        <div class="title-b"><h1>@Model.Name</h1></div>

        <div class="th-grid">
            <img src="~/Content/images/projects/@Model.Image" width="100%" alt="@Model.Name" />
        </div>
        <div class="s-grid">
            @(Model.Incomplete ? "* This project is not complete." : "")
            @(Model.InDevelopment ? "* This project is currently in development." : "")

            @if (Model.TheGameCrafterApiID != null)
            {
                <div class="text">
                    <form id="form-@Model.Name" action="https://www.thegamecrafter.com/cart/sku/@(Model.TheGameCrafterCartID)">
                        <button style="font-family:PT Sans Narrow;background-image:url('/images/icons/shoppingcart.png');background-repeat:no-repeat;background-position:left;padding-left:25px;" type="button">Buy @Model.Name</button>
                    </form>
                </div>
            }

            <div class="text js-project-desc">
                @Model.Description
            </div>
            <div class="text js-designer-desc">
                <b>Author(s):</b>&nbsp;@Model.Author
            </div>

            @if (!String.IsNullOrEmpty(Model.Rulebook))
            {
                <div class="title">
                    <a href="~/Content/documents/@Model.Rulebook" target="_blank" alt="Download Rules">Download the Rules</a>
                </div>
            }

            @if (!String.IsNullOrEmpty(Model.Document))
            {
                <div class="title">
                    <a href="~/Content/documents/@Model.Document" target="_blank" alt="Download Game">Download the Game</a>
                </div>
            }

            @if (!String.IsNullOrEmpty(Model.Charactersheet))
            {
                <div class="title">
                    <a href="~/Content/documents/@Model.Charactersheet" target="_blank" alt="Download Character Sheet">Download Character Sheet</a>
                </div>
            }

            <div class="SocialIcons">
                <!-- Place this tag where you want the +1 button to render. -->
                <div class="fb-like" style="float: right; margin:10px 10px 0;" data-href="http://www.darktierstudios.com/games/@(Model.Name)" data-send="false" data-layout="button_count" data-width="100" data-show-faces="false"></div>
                <div class="plusone" style="width:65px;height:15px;float:right;margin:10px 0;">
                    <div class="g-plusone" data-size="medium"></div>
                </div>
            </div>
        </div>
        <input type="hidden" id="thegamecrafterid" value="@Model.TheGameCrafterApiID" />


        <hr />
        <div id="disqus_thread"></div>
    </div>
</div>

<script type="text/javascript">
    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
    var disqus_shortname = 'darktierstudios'; // required: replace example with your forum shortname
    var disqus_identifier = '/Games/@Model.Name';
    var disqus_title = 'Woe';

    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function () {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
</script>
<noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
<a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>

<script src="~/Scripts/project.js"></script>

