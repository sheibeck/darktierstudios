    <div id="bar">
        <!--bar.start-->
        <div class="wrapper">
            <!--wrapper.start-->

            <div id="logo">
                <a href="/"><img src="~/images/logo.png" width="200" height="40" alt="Darktier Studios" /></a>
            </div>
            <!--The menu is strar's here-->
            <div class="accordion vertical">
                <!--accordion-vert.start-->
                <ul>
                    <li>
                        <input type="checkbox" id="checkbox-1" name="checkbox-accordion" />
                        <label for="checkbox-1"><img src="~/images/menub.png" alt="menu" /></label>
                        <div class="content">


                            <ul class="sf-menu">
                                <!--sf-menu.start-->
                                <li>
                                    <a href="/">Home</a>
                                </li>
                                <li>
                                    <a href="/games">Games</a>                                  
                                </li>
                                <li>
                                    <a href="/blog">Blog</a>
                                </li>
                            </ul>
                        </div><!--sf-menu.end-->
                    </li>
                </ul>
            </div><!--accordion-vert.end-->
            <!--The menu is end's here-->

        </div><!--wrapper.end-->
    </div><!--bar.end-->

    <div class="wrapper">
        @RenderBody()
    </div>

    <!--FOOTER start-->

    <div class="full_div">
        <!--.full_div start-->
        <div class="wrapper">
            <!--.wrapper start-->

            <div class="of-grid">
                <!--.of grid start-->
                <div class="titlefot">
                    <!--.title start-->
                    About Darktier Studios
                </div><!--.title end-->
                <p class="textfot">
                    <!--.textfot start-->
                    Darktier Studios is located in Grand Rapids, MI. We create roleplaying Games, roleplaying game supplements, table-top games and game related tools on the web. This is a part-time gig and we do it for the love of gaming. Sitting down at the table with your friends and family is a great way to build relationships and learn valuable skills that apply to all areas of life.
                </p><!--.textfot end-->
            </div><!--.of grid end-->

            <div class="of-grid">
                <!--.of grid start-->
                <div class="titlefot">
                    <!--.title start-->
                    Get in touch
                </div><!--.title end-->
                <p class="textfot">
                   Email us @@ <a href="mailto:darktierstudios@gmail.com">darktierstudios@gmail.com</a>
                </p>
            </div><!--.of grid end-->
        </div><!--.wrapper end-->
    </div><!--.full_div end-->
    <!--.wrapper start--><div class="wrapper">
        <p class="end">
            Copyright @DateTime.Now.Year Darktier Studios, LLC.<br />
        </p>
        <p class="soc">
